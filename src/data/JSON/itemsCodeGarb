// Select items Wrapper
let wrapper = document.querySelector('#w8-xCarousel');
// select each item
let  itemList = [...wrapper.querySelectorAll('.b-tile')]
		.map( e => {
			const image = e.querySelector('.b-img');
			const name = e.querySelector('.b-info__title').textContent;
			const price = e.querySelector('.b-info__price').textContent;
      const sold = e.querySelector('.b-info__quantityhotness').textContent;
      
			return {
				image,
				name,
				price,
				sold
			}
		});